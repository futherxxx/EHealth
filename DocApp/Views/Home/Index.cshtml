@model DocApp.Models.FrontPage

@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - DocAPP</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="~/Scripts/jquery-uiv1.11.4.css">
    <link rel="stylesheet" href="~/Scripts/bootstrap.min-cus.css">
    <link rel="stylesheet" href="~/Content/customfront.css">
   
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min-cus.js"></script>
    <script src="~/Scripts/jquery-ui1.11.4.js"></script>

    <style>
        .solution2 img {
            position: relative;
            top: 50%;
            transform: translateY(-50%);
        }

        .col-container {
            display: table;
            width: 100%;
        }

        .col {
            display: table-cell;
            padding: 16px;
        }


    </style>


</head>
<body>

   <div style="width: 100%; background-color: #00A4E4; height: 20px"></div>

    <div class="dcenter">
        <div class="container">

            <div class="row" style="padding:5px">
                <div class="col-sm-8">
                    <img src="~/Images/ehealth.png" />
                </div>
                <div class="col-sm-4">
                    <div style="float:right;padding:20px">
                        <a href="~/home/register">Register</a>      &nbsp;
                        <a href="~/home/userlogin">Login</a>        &nbsp;
                        <a href="~/doctor/doclogin">Doctor Login</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">

            <div class="row" style="background-color: #BAE6F8; height: 10px">               
            </div>

                <div class="row">

                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">

                            <div class="item active">
                                <img src="~/images/image1.jpg" alt="Chania" id="mageslider">
                                <div class="carousel-caption">
                                    <h1 style="text-shadow: 2px 2px #000000;">Online Medical Care</h1> 

                                </div>
                            </div>

                            <div class="item">
                                <img src="~/images/image2.jpg" alt="Chania" id="mageslider">
                                <div class="carousel-caption">
                                    <h1 style="text-shadow: 2px 2px #000000;">Meets Individual Needs</h1>

                                </div>
                            </div>

                            <div class="item">
                                <img src="~/images/image3.jpg" alt="Chania" id="mageslider">
                                <div class="carousel-caption">
                                    <h1 style="text-shadow: 2px 2px #000000;">Access to Personal Care</h1>

                                </div>
                            </div>


                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                </div>

            <div class="row" style="background-color: #BAE6F8; height: 10px">
            </div>
            </div>
        <div class="container">
            <div class="row" style="margin-top:10px">
                <div class="col-sm-12" style="padding:10px;text-align:center;font-family:Andalus">
                    <h2>Features</h2>
                </div>
                <div class="col-sm-4" style="text-align:center;">
                    <img src="~/Images/side1.jpg" /><div style="font-family:Andalus;font-size:38px">Prompt Healthcare Service</div>
                </div>
                <div class="col-sm-4" style="text-align:center;">
                    <img src="~/Images/side2.jpg" /><div style="font-family:Andalus;font-size:38px">Online Medical Records</div>
                </div>
                <div class="col-sm-4" style="text-align:center;">
                    <img src="~/Images/side3.jpg" /><div style="font-family:Andalus;font-size:38px">Easy Doctor Booking</div>
                </div>

            </div>
        </div>
        <div class="container-fluid" style="background-color: #EEEEEE;margin-top:20px">
            <div class="row" style="background-color: #BAE6F8; height: 10px">
            </div>
            <div class="container">
                <div class="row">
                   
                        <div class="col-sm-8 " style="padding:10px;text-align:center;font-family:Andalus">
                            <h2>
                            @{if (Model != null)
                              {
                                  
                                   @Model.header
                                  
                              }
                                  
                            }
                           </h2>
                            <div style="font-size: 18px;text-align:left;">
                                @{if (Model != null)
                                {

                                    @Model.textbody

                                }

                                }    
                            </div>
                        </div>
                    <div class="col-sm-4" style="padding:20px">
                        <img src="~/Images/side4.jpg" />
                    </div>
              
                    </div>
            </div>

        </div>
        </div>





        <footer>
            <div class="footer">


                <div class="container ">

                    <div class="row">
                        <div class="col-sm-6 footer1">
                            <p><h6>&copy; @DateTime.Now.Year - DOC App</h6></p>
                        </div>
                        <div class="col-sm-6 footer1">
                           <h4>Contact Us</h4> 
                            <p>@{if (Model != null)
                                {

                                    @Model.contact

                                }

                                }
                            </p>
                            <div style ="padding:10px">
                                <img src="~/Images/facebook.jpg" /> &nbsp;&nbsp;
                                <img src="~/Images/twitter.jpg" /> &nbsp;&nbsp;
                                <img src="~/Images/gplus.jpg" />

                            </div>
                        </div>
                    </div>

                
                
                </div>


            </div>


        </footer>


</body>
</html>
