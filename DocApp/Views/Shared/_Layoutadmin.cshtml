@using DocApp.Classes;
@using System.Globalization;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - DocAPP</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
   
    <link rel="stylesheet" href="~/Scripts/jquery-uiv1.11.4.css">
    <link rel="stylesheet" href="~/Scripts/bootstrap.min-cus.css">
    <link rel="stylesheet" href="~/Content/custom.css">
    <link href="~/Content/customenu.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min-cus.js"></script>
    <script src="~/Scripts/jquery-ui1.11.4.js"></script>

 
</head>
<body>

    <div class="dcenter">
        <div>
            <img src="~/Images/docimage.jpg" />
        </div>


        <div class="col-container">
            <div class="container-fluid col">

                <div>
                
                    @{if (Allstatic.UserDetails.username != null)
                    {
                        

                       <div class="row">

                          @if (Allstatic.UserDetails.surname != null)
                          {
                              string dname = CultureInfo.CurrentCulture.TextInfo.ToTitleCase(Allstatic.UserDetails.surname);
                              
                               <div class="col-sm-10" style="font-family:Andalus;font-size:18px">
                             Welcome:<span style="color:red"> @dname </span>
                            </div>
                            
                        }
                          else
                          {
                              <div class="col-sm-10" style="font-family:Andalus;font-size:18px">
                                   Welcome: <span style="color:red">User, Please update your Profile to enable you use all Services</span>
                            </div>
                              
                              
                          }
                           
                         
                           <div class="col-sm-2" style="text-align:center;padding:5px;">
                               <a href="~/home/logout" class="btn btn-danger btn-md" role="button">Logout</a>
                           </div>
                    </div>
                    }
                      else
                      {
                          
                          
                          
                      }
                   
                    }

                   
                    <div class="row">
                        <div id="custom-bootstrap-menu" class="navbar navbar-default " role="navigation">
                            <div class="container-fluid">
                                <div class="navbar-header">
                                    <a class="navbar-brand" href="#"></a>
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-menubuilder">
                                        <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                                    </button>
                                </div>
                                <div class="collapse navbar-collapse navbar-menubuilder">
                                    <ul class="nav navbar-nav navbar-left">
                                        <li>
                                            <a href="~/Doctorcategory">Category</a>
                                        </li>
                                      
                                        <li><a href="~/DocHospitals">Hospitals</a></li>
                                        <li><a href="~/Doctors">View Doctors</a></li>
                                        <li><a href="~/Adremedy">Ailments</a></li>
                                        <li><a href="~/AdSymptom">Symptoms</a></li>
                                        <li><a href="~/Adusers">All Users</a></li>
                                        <li><a href="~/Admin/Regadmin">Add Admin</a></li>
                                        <li><a href="~/FrontPage">Edit Frontpage</a></li>
                                        @*<li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Shop <b class="caret"></b></a>
                                            <ul class="dropdown-menu" role="menu">
                                                <li><a href="~/Shop/Showcategor">fgfd</a></li>
                                            </ul>
                                        </li>*@
                                    </ul>
                                </div>
                            </div>
                        </div>



                    </div>


                        

                        <div class="row">
                            <div class="col-sm-12">
                                @RenderBody()
                            </div>
                        </div>


                    </div>
            </div>
        </div>

        </div>
        
    
    <footer>
        <div class="footer">


            <div class="container footer1"><p><h6>&copy; @DateTime.Now.Year - DOC App</h6></p></div>


        </div>


    </footer>


</body>
</html>
