
@{
    ViewBag.Title = "Regadmin";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

@{if (ViewBag.error != "USER ADDED" && ViewBag.error != null)
{ <div class="alert alert-danger alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong> @ViewBag.error.</strong>
    </div>

}
  else if (ViewBag.error == "USER ADDED")
  {
      <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong> @ViewBag.error.</strong>
    </div>      
      
  }

}


<div style="border-bottom-width: thin; border-bottom-style: solid; border-bottom-color: #999999;margin-bottom:20px"><h2>Add New Administrator</h2></div>


