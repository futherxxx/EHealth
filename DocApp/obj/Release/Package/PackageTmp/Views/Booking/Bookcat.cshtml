@using DocApp.Models;

@model IEnumerable<DocApp.Models.DocCategory> 

 @{
    ViewBag.Title = "Bookcat";
    Layout = "~/Views/Shared/_Layout1.cshtml";

    DocHospital hosinfo = (DocHospital)ViewBag.info;
 }


    <div class="row">
        <div class="col-sm-4">
            <div style="border-bottom-width: thin; border-bottom-style: solid; border-bottom-color: #999999;"><h2>Hospital Information</h2></div>
            <div style="color:green"><h3>@hosinfo.Hospitalname</h3></div>
            <div style="font-family:Verdana;font-style:normal;font-size:medium">@hosinfo.Otherinfo</div>
        

        </div>
        <div class="col-sm-8">

            <div style="border-bottom-width: thin; border-bottom-style: solid; border-bottom-color: #999999;"><h2>Available Doctor Types and Specialization</h2></div>

            @if (Model.Count() != 0)
            {
                <table width="100%" border="0" align="left" cellpadding="0" cellspacing="0">
                    <tr>

                        <td width="100%" height="24" align="left" valign="top"><h4 style="font-weight:bold;color:red">Specialization</h4></td>

                    </tr>

                    @foreach (var item in Model)
                    {

                        <tr>
                            <td height="28" align="left" valign="top" style="padding:10px"><a href="~/Booking/Doclist?id=@item.id">@item.CatName</a></td>

                        </tr>
                    }


                </table>

            }
            else
            {
                <p><h4 style="color:red">No Available Doctors in this Hospital</h4></p>


            }

        </div>
    </div>








