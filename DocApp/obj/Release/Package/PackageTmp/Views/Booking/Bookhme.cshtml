@model IEnumerable<DocApp.Models.DocHospital>

@{
    ViewBag.Title = "Bookhme";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div style="border-bottom-width: thin; border-bottom-style: solid; border-bottom-color: #999999;"><h2>Available Hospitals</h2></div>


<p>

    @if (Model != null)
    {


        <table width="100%" border="0" align="left" cellpadding="0" cellspacing="0">
            <tr>

                <td width="30%" height="24" align="left" valign="top"><h4 style="font-weight:bold;color:red">Hospital Name</h4></td>
                <td width="40%" align="left" valign="top"><h4 style="font-weight:bold;color:red">Address</h4></td>
                <td width="10%" align="left" valign="top"><h4 style="font-weight:bold;color:red">State</h4></td>
                <td width="20%" align="left" valign="top"><h4 style="font-weight:bold;color:red">Mobile</h4></td>
                
            </tr>


            @foreach (var item in Model)
{

    <tr>
        <td height="28" align="left" valign="top" style="padding:10px"><a href="~/Booking/Bookcat?id=@item.id">@item.Hospitalname</a></td>
        <td align="left" valign="top" style="padding:10px">@item.Hospitaladdress</td>
        <td align="left" valign="top" style="padding:10px">@item.State</td>
        <td align="left" valign="top" style="padding:10px">@item.mobile</td>
    </tr>

}


        </table>



    }


</p>

